<p id="notice"><%= notice %></p>

<h1>Capitals</h1>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @capitals.each do |capital| %>
      <tr>
        <td><%= capital.state %></td>
        <td><%= link_to 'Show', capital %></td>
        <td><%= link_to 'Edit', edit_capital_path(capital) %></td>
        <td><%= link_to 'Destroy', capital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Capital', new_capital_path %>
